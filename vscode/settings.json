{

  "vim.leader": " ",
  "vim.useSystemClipboard": true,

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "s"], "commands": ["workbench.action.files.save"] },
    { "before": ["<leader>", "w"], "commands": ["workbench.action.closeActiveEditor"] },
    { "before": ["<leader>", "Q"], "commands": ["workbench.action.closeAllEditors"] },
    { "before": ["<leader>", "f"], "commands": ["workbench.action.closeOtherEditors"] },
    { "before": ["<leader>", "t"], "commands": ["workbench.action.reopenClosedEditor"] },
    { "before": ["<leader>", "h"], "commands": ["workbench.action.navigateLeft"] },
    { "before": ["<leader>", "j"], "commands": ["workbench.action.navigateDown"] },
    { "before": ["<leader>", "k"], "commands": ["workbench.action.navigateUp"] },
    { "before": ["<leader>", "l"], "commands": ["workbench.action.navigateRight"] },
    { "before": ["<leader>", "H"], "commands": ["workbench.action.previousEditor"] },
    { "before": ["<leader>", "L"], "commands": ["workbench.action.nextEditor"] }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "y"], "commands": ["editor.action.clipboardCopyAction", "cancelSelection"] }
  ],

  "vim.normalModeKeyBindings": [
    { "before": ["<C-p>"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<C-b>"], "commands": ["workbench.action.showAllEditors"] }
  ],

  "vim.cursorStylePerMode": {
    "normal": "block",
    "visual": "block",
    "select": "block",
    "insert": "line",
    "replace": "underline",
    "cmdline_normal": "block"
  },

  "editor.cursorBlinking": "solid",


  "editor.fontFamily": "JetBrains Mono", // for vscode only this
  "editor.fontSize": 12.3,
  "editor.lineHeight": 22, // tighter, more JetBrains-like
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment"
        ],
        "settings": {
          "foreground": "#828282"
        }
      }
    ]
  },
  "editor.rulers": [
    80,
    90,
    120
  ],
    "workbench.colorCustomizations": {
    "[Visual Studio Dark]": {
      "editor.background": "#2d2d2d"
    },
    "[Visual Studio Light]": {
      "editor.background": "#f2f2f2"
    }
  },
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.preferredLightColorTheme": "Visual Studio Light",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "zenMode.hideLineNumbers": false,
  "editor.minimap.showSlider": "always",
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "editor.minimap.renderCharacters": false,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.panel.opensMaximized": "never",
   // defaultFormatter
    "editor.defaultFormatter": "ms-vscode.cpptools",
      "editor.autoClosingBrackets": "never",
   // python 

     "python.analysis.inlayHints.variableTypes": true,
  "ruff.lineLength": 80,
  "ruff.configuration": "",
  "ruff.path": [
    "/Users/isaigordeev/Desktop/millenium-falcon-challenge/.venv/bin/ruff"
  ],

  // CPP
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_path": "/usr/local/opt/llvm@17/bin/clang-format",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true

}
