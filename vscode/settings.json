  "_C_Cpp.clang_format_path": "/usr/local/opt/llvm@17/bin/clang-format",
  "_C_Cpp.intelliSenseEngine": "default",
  "_C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.clang_format_fallbackStyle": "",
