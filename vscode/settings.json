  // ─── Editor Settings
  // ────────────────────────────────────────────────────────────
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 11.9, // 11.9 vim style // 12.3 JB style
  "editor.lineHeight": 20, // 20 vim style // 22 JB style
  "editor.rulers": [80],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 79,
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.stickyScroll.enabled": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.dragAndDrop": false,
  "editor.folding": false,
  "editor.renderWhitespace": "selection",
  "editor.occurrencesHighlight": "off",
  "editor.cursorSurroundingLines": 3,
  "editor.showFoldingControls": "never",
  "editor.scrollbar.ignoreHorizontalScrollbarInContentHeight": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.unicodeHighlight.allowedCharacters": { "σ": true },

  // ─── Workbench Appearance ──────────────────────────────────────────────────────
  "workbench.sideBar.location": "left",
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.navigationControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.showTabs": "none",
  "workbench.statusBar.visible": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.panel.opensMaximized": "never",
  "workbench.layoutControl.enabled": true,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.preferredLightColorTheme": "Visual Studio Light",
  "workbench.editor.limit.enabled": true,
  "workbench.colorCustomizations": {
    "[Visual Studio Dark]": {
      "editor.background": "#2d2d2d",
      "sideBar.background": "#2d2d2d"
    },
    "[Visual Studio Light]": {
      "editor.background": "#f2f2f2"
    }
  },

