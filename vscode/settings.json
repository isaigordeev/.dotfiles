{
    "_comment_vim": "Vim configuration",
    "vim.leader": " ",
    "vim.useSystemClipboard": true,

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "s"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "z"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ]
        },
        {
            "before": [
                "<leader>",
                "Q"
            ],
            "commands": [
                "workbench.action.closeAllEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "f"
            ],
            "commands": [
                "workbench.action.closeOtherEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "workbench.action.reopenClosedEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "workbench.action.navigateLeft"
            ]
        },
        {
            "before": [
                "<leader>",
                "j"
            ],
            "commands": [
                "workbench.action.navigateDown"
            ]
        },
        {
            "before": [
                "<leader>",
                "k"
            ],
            "commands": [
                "workbench.action.navigateUp"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "commands": [
                "workbench.action.navigateRight"
            ]
        },
        {
            "before": [
                "<leader>",
                "H"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "L"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "y"
            ],
            "commands": [
                "editor.action.clipboardCopyAction"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<C-p>"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<C-b>"
            ],
            "commands": [
                "workbench.action.showAllEditors"
            ]
        }
    ],
    "editor.cursorBlinking": "solid",
    "_comment_zen": "Zen Mode configuration",
    "zenMode.fullScreen": true,
    "zenMode.restore": true,
    "zenMode.centerLayout": true,
    "zenMode.showTabs": "none",
    "zenMode.hideLineNumbers": false,
    "_comment_editor": "Editor appearance and layout",
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 11.9, // 11.9 vim style // 12.3 JB style
    "editor.lineHeight": 20, // 20   vim style // 22 JB style
    "editor.rulers": [
        80
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 79,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "_editor.detectIndentation": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.autoClosingBrackets": "never",
    "_comment_colors": "Color and theme customizations",
    "editor.tokenColorCustomizations": {
