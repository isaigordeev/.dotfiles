{
    "_comment_vim": "Vim configuration",
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "s"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "z"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ]
        },
        {
            "before": [
                "<leader>",
                "Q"
            ],
            "commands": [
                "workbench.action.closeAllEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "f"
            ],
            "commands": [
                "workbench.action.closeOtherEditors"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "workbench.action.reopenClosedEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "workbench.action.navigateLeft"
            ]
        },
        {
            "before": [
                "<leader>",
                "j"
            ],
            "commands": [
                "workbench.action.navigateDown"
            ]
        },
        {
            "before": [
                "<leader>",
                "k"
            ],
            "commands": [
                "workbench.action.navigateUp"
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "commands": [
                "workbench.action.navigateRight"
            ]
        },
        {
            "before": [
                "<leader>",
                "H"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "L"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "y"
            ],
            "commands": [
                "editor.action.clipboardCopyAction"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<C-p>"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<C-b>"
            ],
            "commands": [
                "workbench.action.showAllEditors"
            ]
        }
    ],
  "editor.cursorBlinking": "solid",
  "_comment_zen": "Zen Mode configuration",
  "zenMode.fullScreen": true,
  "zenMode.restore": true,
  "zenMode.centerLayout": true,
  "zenMode.showTabs": "none",
  "zenMode.hideLineNumbers": false,
  "_comment_editor": "Editor appearance and layout",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 11.9,  // 11.9 // 12.3
  "editor.lineHeight": 20,  // 20   // 22
  "editor.rulers": [80],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 79,
  "_editor.insertSpaces": true,
  "_editor.tabSize": 4,
  "editor.detectIndentation": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.autoClosingBrackets": "never",
  "_comment_colors": "Color and theme customizations",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
            "comment"
        ],
        "settings": {
          "foreground": "#828282"
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "[Visual Studio Dark]": {
      "editor.background": "#2d2d2d"
    },
    "[Visual Studio Light]": {
      "editor.background": "#f2f2f2"
    }
  },
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.preferredLightColorTheme": "Visual Studio Light",
  "_comment_workbench": "Workbench and layout settings",
  "workbench.navigationControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.editor.showTabs": "none",
  "workbench.statusBar.visible": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.panel.opensMaximized": "never",
  "breadcrumbs.enabled": true,
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.commandCenter": false,
  "chat.commandCenter.enabled": false,
  "workbench.layoutControl.enabled": true,
  "workbench.editor.editorActionsLocation": "hidden",
  "_comment_defaultFormatter": "Default formatter configuration",
  "_comment_python": "Python and Ruff settings",
